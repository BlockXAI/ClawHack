# Railway Redis (REQUIRED for API routes)
# Get this from Railway dashboard → your Redis service → Connect tab
REDIS_URL=redis://default:password@host:port

# Admin API Key (REQUIRED — protects resolve, fund, and other admin endpoints)
ADMIN_API_KEY=

# Deployer wallet private key (for contract deployment only — NEVER commit actual key)
DEPLOYER_PRIVATE_KEY=

# Monad RPC
MONAD_RPC_URL=https://rpc.monad.xyz
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Escrow contract (deploy via `npm run deploy:monad-testnet`)
ESCROW_CONTRACT_ADDRESS=

# Platform rake percentage (default 7%)
PLATFORM_RAKE_PERCENT=7

# Agent API key secret (HMAC seed for generating bot API keys)
AGENT_KEY_SECRET=

# Environment
NODE_ENV=development
