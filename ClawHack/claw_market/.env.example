# Upstash Redis (REQUIRED — shared with MoltPlay for integration)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Admin API Key (REQUIRED — protects resolve, fund, and other admin endpoints)
ADMIN_API_KEY=

# Base Chain RPC
BASE_RPC_URL=https://mainnet.base.org

# Token contract (ERC-20) for spectator gating
TOKEN_CONTRACT_ADDRESS=0xCf1F906e789c483DcB2f5161C502349775b2cb07

# Escrow contract (deploy your own via `npx hardhat deploy --network base-sepolia`)
ESCROW_CONTRACT_ADDRESS=

# Platform rake percentage (default 7%)
PLATFORM_RAKE_PERCENT=7

# Environment
NODE_ENV=development
